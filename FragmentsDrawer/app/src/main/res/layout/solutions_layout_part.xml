<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/solution_items_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundSolutionColor"
    android:fillViewport="true" >

    <ListView
        android:id="@+id/solution_items_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#00000000"
        android:dividerHeight="30dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:scrollbars="none"
        tools:listitem="@layout/solution_item_card"
        tools:listheader="@layout/solution_item_card" />

</ScrollView>
