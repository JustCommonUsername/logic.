<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_solution_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundSolutionColor">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_solution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_collapsing_solution"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_scrollFlags="scroll"
            app:collapsedTitleGravity="center_horizontal"
            app:expandedTitleMarginStart="20dp"
            app:expandedTitleTextAppearance="@style/TitleExpandedAppearance"
            android:theme="@style/AppTheme.AppBarOverlay.Dark"
            android:fitsSystemWindows="true">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_consistent_solution"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleTextColor="@color/secondaryTextColor"
                app:popupTheme="@style/AppTheme.PopupOverlay.Dark" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:alpha="0.8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/ic_close_black_16dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="end"
        app:fabCustomSize="30dp"
        app:elevation="6dp"
        app:pressedTranslationZ="6dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scroll_solutions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingTop="40dp"
        android:paddingEnd="20dp"
        android:paddingBottom="40dp"
        app:layout_anchor="@id/app_bar_solution"
        app:layout_anchorGravity="bottom"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:itemCount="0" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>